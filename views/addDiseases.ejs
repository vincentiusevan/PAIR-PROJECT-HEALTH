<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Diseases</title>
  </head>
  <body>
    <main>
      <div class="title">
        <h1>Add Diseases</h1>
      </div>
      <form action="/doctors/addDiseases" method="post">
        <div class="column">
            <label for="">Name Diseases</label>
            <input type="text" name="name">
        </div>
        <div class="column">
          <label for="">Description</label>
          <input type="text" name="description" />
        </div>
        <div class="column">
          <label for="">Level</label>
          <% let level = [1, 2, 3] %>
          <select name="level" id="">
            <% level.forEach(level => { %>
             <option value="<%= level %>"><%= level %></option>
            <% }) %>
          </select>
        </div>
        <div class="column">
          <label for="">Medicine</label>
          <input type="text" name="medicine" />
        </div>
        <div class="column">
          <label for="">specialist</label>
          <% let specialization = ["THT", "Mata", "Bedah", "Penyakit dalam","Paru","Otak"] %>
          <select name="specialization" id="">
            <% specialization.forEach(specialization => { %>
             <option value="<%= specialization %>"><%= specialization %></option>
            <% }) %>
          </select>
        </div>
        <div class="column">
            <button type="submit">Add</button>
        </div>
      </form>
    </main>
  </body>
</html>
