<%- include('headerPatients') %>

    <main class="doctors">
        <div class="container">
            <div class="title">
                <h1>Our Doctors</h1>
            </div>

            <form class="search" action="/patients/doctors" method="get">
                <input type="text" name="search" value="<%= search || '' %>" placeholder="Search doctor...">
                <button class="btn" type="submit">Search</button>
            </form>

            <div class="content">
                <% doctors.forEach(el=> { %>
                    <div class="box">
                        <div class="images">
                            <img src="<%= el.imageUrl %>" alt="<%= el.name %>">
                        </div>
                        <div class="desc">
                            <h3>
                                <%= el.name %>
                            </h3>
                            <p>Specialization: <%= el.specialization %>
                            </p>
                            <p>Degree: <%= el.degree %>
                            </p>
                            <div class="btnWrap">
                                <a class="btn" href="/patients/book">Book Appointment</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>

        </div>
    </main>

    <%- include('footerDoctors') %>